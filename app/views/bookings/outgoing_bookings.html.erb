<div class="container text-center">
  <h2>My requests</h2>

<table>
  <tr>
    <th>Fan owner</th>
    <th>Fan photo</th>
    <th>Fan name</th>
    <th>Booking starting date</th>
    <th>Booking end date</th>
    <th>Status</th>
  </tr>
  <% @bookings.each do |booking| %>
  <tr>
    <td><%= cl_image_tag(booking.fan.user.avatar.key, class: "avatar", height: 40, width: 40, crop: :fill) %><br><%= booking.fan.user.email %></td>
    <td><%= cl_image_tag(booking.fan.photo.key, height: 80, width: 80, crop: :fill)%></td>
    <td><%= booking.fan.name %></td>
    <td><%= booking.start_date %></td>
    <td><%= booking.end_date %></td>
    <td><span><%= booking.status %></span></td>
  </tr>
  <% end %>
</table>
<%= link_to "Back to all fans", root_path, class: "btn-gradient-new" %>
<hr>
</div>

