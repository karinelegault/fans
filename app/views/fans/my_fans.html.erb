<div class="container">
  <hr>
  <h2 class="text-center">My Fans</h2>
  <div class="container-grid">
  <% @fans.each do |fan| %>
    <div class="card-grid-index">
      <div class="card-product-index">
        <img src="https://images.unsplash.com/photo-1612549672719-2f1a3908ae31?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=668&q=80" />
        <div class="card-product-infos-index">
          <h2><%= fan.name  %></h2>
          <p><%= fan.description  %></p>
          <p><%= fan.price  %></p>
          <div class="card-new-info">
              <%= link_to "Infos", fan_path(fan), class: "btn btn-gradient"%>
              <%= link_to "Edit Fan", edit_fan_path(fan), class: "btn btn-gradient"%>
              <%= link_to "Delete", fan_path(fan), class: "btn btn-ghost", method: :delete, data: {confirm: "Are you sure you want to delete #{fan.name}"}%>
          </div>
        </div>
      </div>
   </div>
   <% end  %>
  </div>
  <div class="container text-center">
    <%= link_to "Back to all fans", fans_path, class: "btn-gradient-new"  %>
    <%= link_to "Create Fan", new_fan_path, class: "btn-gradient-new"%>
  </div>
  <hr>
</div>
