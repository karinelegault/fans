<div class="container">

  <div class="form-card">

    <%= simple_form_for @fan do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price, label: "Price/Week" %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn-gradient-new' %>
    <% end %>

<div class="mt-2">
<%= link_to "Back to all fans", fans_path, class: "btn-gradient-new"  %>
</div>
  </div>
<hr>
</div>
